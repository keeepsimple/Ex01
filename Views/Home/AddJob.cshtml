@model Job
@{
    ViewData["Title"] = "Create Job";
}

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="AddJob" class="text-center">
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Tên công việc" />
                    <label for="floatingInput">Tên công việc</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Description" class="form-control" id="floatingInput" placeholder="Mô tả" />
                    <label for="floatingInput">Mô tả</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="ProcessingTime" class="form-control" id="floatingInput" placeholder="Thời gian sẽ xử lý công việc" />
                    <label for="floatingInput">Thời gian sẽ xử lý công việc</label>
                    <span asp-validation-for="ProcessingTime" class="text-danger"></span>
                </div>
                <input type="hidden" name="Status" value="Cần làm" />
                <input type="submit"class="btn btn-success mt-3" value="Tạo"/>
                <a asp-action="Index" class="btn btn-light mt-3">Trở lại</a>
            </form>
        </div>
    </div>
</div>