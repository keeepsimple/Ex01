@model Job
@{
    ViewData["Title"] = "Update Job";
}
<div class="container">
    <div class="row">
        <div class="col-md-6">
            <form asp-action="UpdateJob" class="text-center">
                @Html.HiddenFor(x=>x.Id)
                @Html.HiddenFor(x=>x.CreatedAt)
                <div class="form-floating">
                    <input asp-for="Name" class="form-control" id="floatingInput" placeholder="Tên công việc" />
                    <label for="floatingInput">Tên công việc</label>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="Description" class="form-control" id="floatingInput" placeholder="Mô tả" />
                    <label for="floatingInput">Mô tả</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <input asp-for="ProcessingTime" class="form-control" id="floatingInput" placeholder="Thời gian sẽ xử lý công việc" />
                    <label for="floatingInput">Thời gian sẽ xử lý công việc</label>
                    <span asp-validation-for="ProcessingTime" class="text-danger"></span>
                </div>
                <div class="form-floating mt-3">
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Status" @(Model.Status == 0 ? "checked": "unchecked") id="Status" value="0">
                        <label class="form-check-label" for="Status">Cần làm</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Status" @(Model.Status == 1 ? "checked" : "unchecked") id="Status" value="1">
                        <label class="form-check-label" for="Status">Đang làm</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="Status" @(Model.Status == 2 ? "checked" : "unchecked") id="Status" value="2">
                        <label class="form-check-label" for="Status">Đã làm</label>
                    </div>
                </div>

                <input type="submit" class="btn btn-success mt-3" value="Sửa" />
                <a asp-action="Index" class="btn btn-light mt-3">Trở lại</a>
            </form>
        </div>
    </div>
</div>